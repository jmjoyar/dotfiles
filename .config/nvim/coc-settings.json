{
  "colors.enable": true,
  "semanticTokens.enable": false,
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "suggest.autoTrigger": "none",
  "diagnostic.errorSign": ">>",
  "diagnostic.warningSign": ">>",
  "diagnostic.infoSign": ">>",
  "diagnostic.hintSign": ">>",
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.autoRefresh": true,
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextFormat": "ï‘… %message",
  "diagnostic.virtualTextWinCol": null,
  "diagnostic.virtualTextLines": 3,
  "diagnostic.virtualTextLineSeparator": " \\ ",
  "diagnostic.virtualTextLimitInOneLine": 1,
  "codeLens.enable": true,
  "signature.enable": false,
  "signature.target": "echo",
  "suggest.enableFloat": false,
  "suggest.noselect": true,
  "inlayHint.enable": false,
  // Java config
  "xml.java.home": "/usr/lib/jvm/java-22-openjdk",
  "java.referencesCodeLens.enabled": false,
  "java.implementationsCodeLens.enabled": false,
  "java.format.enabled": true,
  "java.saveActions.organizeImports": true,
  // Lua config
  "Lua.hint.enable": false,
  "sumneko-lua.enableNvimLuaDev": true,
  // Python config
  "pyright.enable": true,
  "pyright.inlayHints.variableTypes": false,
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.parameterTypes": false,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/bin/black",
  "python.linting.pydocstyleEnabled": true,
  "pydocstring.enable": true,
  "pydocstring.enableFileAction": true,
  "pydocstring.formatter": "google",
  "snippets.ultisnips.pythonPrompt": false,
  // cSpell
  "cSpellExt.enableDictionaries": ["spanish"],
  "cSpell.language": "en, es"
}
